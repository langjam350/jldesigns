{
  "hosting": {
    "public": "out",
    "cleanUrls": true,
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "blog",
        "destination": "blog.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      } 
    ]
  }
}
