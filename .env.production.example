# JL Designs Production Environment Configuration

# App Environment
NEXT_PUBLIC_APP_ENV=production
NODE_ENV=production
NEXT_PUBLIC_SITE_URL=https://jldesigns.com

# Firebase Configuration
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id

# Video Generation Services
GOOGLE_CLOUD_PROJECT_ID=your_gcp_project_id
GOOGLE_APPLICATION_CREDENTIALS=path_to_service_account_json

# Text-to-Speech Configuration
GOOGLE_CLOUD_TTS_API_KEY=your_tts_api_key

# OpenAI Configuration (for video script generation)
OPENAI_API_KEY=your_openai_api_key

# Unsplash Configuration (for image search)
NEXT_PUBLIC_UNSPLASH_ACCESS_KEY=your_unsplash_access_key

# Email Configuration (optional)
EMAIL_USER=your_email@domain.com
EMAIL_PASSWORD=your_email_password

# Database Configuration
DATABASE_URL=your_database_url

# Security
JWT_SECRET=your_jwt_secret
ENCRYPTION_KEY=your_encryption_key

# Video Storage
VIDEO_STORAGE_BUCKET=your_video_storage_bucket
FIREBASE_STORAGE_BUCKET=your_firebase_storage_bucket

# Cloud Run Configuration
HOST=jldesigns.com
PORT=4000